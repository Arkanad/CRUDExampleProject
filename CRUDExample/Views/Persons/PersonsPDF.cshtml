@model IEnumerable<PersonResponse>

@{
    Layout = null;
}
 
<link href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")" rel="stylesheet"/>

<h1>Persons</h1>

<table class="w-100 table mt">
    <thead>
        <tr> @*Create a PDF file where shown: 1) Person name, 2) email, 3) date of birth, 4) age, 5) gender, 6) country name, 7) address, 8) receive news letters*@
            <th>Person name</th>
            <th>Email</th>
            <th>Date of birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country name</th>
            <th>Address</th>
            <th>Receive news letters</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PersonResponse person in Model)
        {
            <tr>
                <td style=width:15%>@person.PersonName</td>
                <td style=width:20%>@person.Email</td>
                <td style=width:13%>@person.DateOfBirth?.ToString("dd MMM yyyy")</td>
                <td style=width: 9%>@person.Age</td>
                <td style=width:9%>@person.Gender</td>
                <td style=width:10%>@person.CountryName</td>
                <td style=width:15%>@person.Address</td>
                <td style=width: 20%>@person.ReceiveNewsLetters</td>
            </tr>
        }
    </tbody>
</table>
