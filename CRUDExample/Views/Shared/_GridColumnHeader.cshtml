@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.Asc.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.Desc)">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOrderOptions.Desc.ToString())
{
    <th>
        <a href="~/persons/index?sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.Asc)&searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-sort-down"></i>
    </th> 
}
else
{
    <th>
        <a href="~/persons/index?SortBy=@ViewBag.ColumnName&CurrentSortOrder=@nameof(SortOrderOptions.Asc)&CurrentSearchBy=@ViewBag.CurrentSearchBy&CurrentSearchString=@ViewBag.CurrentSearchString">@ViewBag.DisplayName</a>
    </th> 
}